<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.CAMERA" />

    <application
        android:name=".ConcussionApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.ConcussionClient"
        android:screenOrientation="reverseLandscape"
        tools:targetApi="31">
        <activity
            android:name=".TestEndscreenActivity"
            android:exported="false"
            android:label="@string/title_activity_test_endscreen"
            android:screenOrientation="reverseLandscape"
            android:theme="@style/Theme.ConcussionClient.NoActionBar" />
        <activity
            android:name=".ReviewFlashcardActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:exported="false"
            android:label="@string/title_activity_review_flashcard"
            android:screenOrientation="reverseLandscape"
            android:theme="@style/Theme.ConcussionClient.NoActionBar" />
        <activity
            android:name=".TestActivity"
            android:exported="false"
            android:screenOrientation="reverseLandscape" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:screenOrientation="reverseLandscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>
</manifest>